<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.WelcomeScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Welcome!"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primaryGreen"
        android:fontFamily="@font/leaguespartan_bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="244dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/welcome1"
        android:layout_marginHorizontal="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="36dp"
        android:text="Temukan beragam produk kerajinan terbaik dari kami"
        android:textAlignment="center"
        android:textColor="@color/primaryGreen"
        android:textSize="15sp"
        android:fontFamily="@font/leaguespartan_bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_welcome"
        android:background="@drawable/bg_buttton_green_rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:layout_marginTop="30sp"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:text="Masuk"
        android:textAllCaps="false"
        style="@style/Widget.AppCompat.Button.Colored"
        android:fontFamily="@font/productsans_medium"
        android:textSize="18sp"/>

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="atau"
        android:textColor="#404040"
        android:textSize="16sp"
        android:fontFamily="@font/productsans_regular"
        android:textAlignment="center"
        android:layout_marginTop="12dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register_welcome"
        android:background="@drawable/bg_buttton_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="32dp"
        android:paddingVertical="6dp"
        android:gravity="center"
        android:text="Daftar"
        android:textAllCaps="false"
        android:textColor="@color/primaryGreen"
        style="@style/Widget.AppCompat.Button.Colored"
        android:fontFamily="@font/productsans_medium"
        android:textSize="18sp"/>

</LinearLayout>